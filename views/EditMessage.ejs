<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Modifier Message</title>
    <%- include('./partials/bootstrap') %>
  </head>
  <body style="margin-top:55px">
      <%- include('./partials/nav'); %>
    <div class="d-flex flex-column align-items-center ">
      <div class="container col-6">
        <h1 class="text-center">Modifier le message de 
          <span class="text-success"><%= message.expediteur %> </span>
        </h1>
        <form action="/edit-message/<%= message._id %>?_method=PUT" method="POST">
          <!-- <div class="form-group ">
            <label for="objet" class="fst-italic">Objet</label>
            <input type="text" class="form-control" name="objet" required>
          </div> -->
          <div class="form-group ">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" class="form-control" name="destinataire" value="<%= message.destinataire %>">
            <input type="hidden" class="form-control" name="expediteur" value="<%= message.expediteur %>">
            <input type="hidden" name="datetime" id="datetime" value="<%= heure %>">  
            <label for="message">Message</label>
            <textarea class="form-control" id="message" name="texte" rows="4" required><%= message.texte %></textarea>
          </div>
          <!-- boutons     -->
            <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success mt-2">Enregistrer</button>
                  </form>
                <form action="/delete-message/sent/<%= message._id %>?_method=DELETE" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger mt-2">Supprimer</button>
                </form>
                <a href="/messagesent" class="btn btn-primary mt-2 "> Retour </a>
              </div>
            </div>
          <!-- fin boutons -->
      </div>
    </div>
  </body>
</html>