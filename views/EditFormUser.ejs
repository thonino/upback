<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Modifier compte</title>
    <%- include('./partials/bootstrap') %>
  </head>
  <body style="margin-top:55px">
      <%- include('./partials/nav'); %>
    <div class="d-flex flex-column align-items-center ">
      <div class="container col-6 ">
        <h1 class="text-center">Modifier le compte de 
          <span class="text-success text-capitalize"><%= user.prenom %> </span>
        </h1>
        <div class="d-flex flex-column">
          <form action="/edit-user/<%= user._id %>?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <label for="prenom" class="fst-italic">Prenom</label>
            <input type="text" class="form-control" name="prenom" value="<%= user.prenom %>">
            <div class="form-group ">
              <label for="email" class="fst-italic">Email</label>
              <input type="email" class="form-control" name="email" value="<%= user.email %>">
            </div>
            <div class="form-group ">
              <label for="password" class="fst-italic">password</label>
              <input type="password" class="form-control"  name="password" value="">
            </div>
            <input type="hidden" class="form-control" name="roleDefault" value="client">
            <% if (user.role === 'admin'){ %>
              <div class="form-group">
                <label for="role" class="fst-italic">Role</label>
                <select class="form-control" name="role" value="<%= user.role %>">
                  <option value="admin">admin</option>
                  <option value="client">client</option>
                </select>
              </div>
            <% } %>
              <button type="submit" class="btn btn-success mt-2">Enregistrer</button>
          </form>
          <div>
            <form action="/delete-user/<%= user._id %>?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger mt-2">Supprimer</button>
            </form>
            <a href="/userpage" class="btn btn-primary fw-bold mt-2">Retour</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>